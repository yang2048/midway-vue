{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "composite": true,
    "types": [
      "vite/client",
      "naive-ui/volar"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
    }
  },
  "include": [
    "../vite.config.tss",
    "./@types",
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts"
  ]
}