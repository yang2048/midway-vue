{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "view"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}